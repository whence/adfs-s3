<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <style>
      body {
        padding: 50px;
        font: 13px Helvetica, Arial, sans-serif;
      }
      .error {
          color: red
      }
      .success {
          color: green;
      }
    </style>
  </head>
  <body>

    <h1>Login</h1>
    <%- message %>
    <form method="post" action="/login">
      <p>
        <label>Username:</label>
        <input type="text" name="username">
      </p>
      <p>
        <label>Password:</label>
        <input type="password" name="password">
      </p>
      <p>
        <input type="submit" value="Login">
      </p>
    </form>

  </body>
</html>
